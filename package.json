{
  "name": "blog-app",
  "version": "1.0.0",
  "description": "A TypeScript Node.js blog application with SQLite database and OpenAPI docs",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist",
    "generate-api-spec": "curl -s http://localhost:3000/swagger.json | jq . > openapi.json && echo 'OpenAPI specification saved to openapi.json'"
  },
  "keywords": [
    "blog",
    "nodejs",
    "typescript",
    "sqlite",
    "auth",
    "openapi"
  ],
  "author": "",
  "license": "MIT",
